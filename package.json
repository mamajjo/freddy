{
  "name": "freddy-api",
  "version": "0.0.1",
  "description": "Freddy API",
  "author": "Maciej Majchrowski <maciek21197@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10.16.3",
    "npm": ">=5.6",
    "yarn": ">=1.3.2"
  },
  "scripts": {
    "start": "node dist/bin/freddy-api.js",
    "build:dev": "rimraf dist && cross-env NODE_ENV=development babel src -d dist -s --copy-files",
    "dev": "nodemon --inspect=0.0.0.0:9229 src/bin/freddy-api.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "cover": "npm run test -- --coverage",
    "lint": "eslint --fix src",
    "docs": "apidoc -i src/ -o docs/",
    "format": "prettier \"src/**/*.{js,html}\" --write"
  },
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "bcryptjs": "^2.4.3",
    "bristol": "^0.4.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.0.1",
    "jsonwebtoken": "^8.5.1",
    "keyblade": "^0.3.2",
    "mock-req-res": "^1.1.4",
    "nodemon": "^2.0.4",
    "palin": "^2.3.0",
    "yenv": "^2.1.1"
  },
  "devDependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "logger": "^0.0.1",
    "mongoose": "^5.9.14",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.e2e.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "tests",
      "src/lib",
      "src/docs",
      "src/bin",
      "src/persistence/mongo.js"
    ]
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": [
          "**/tests/**"
        ]
      }
    }
  }
}
